<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
  PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
  "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
  
  <!-- namespace -->
  <mapper namespace="org.kent.mapper.TodoMapper">    <!-- 파일이름 똑같이 가져와야됨 -->
  
  <select id="selectOne" resultType="org.kent.entity.Todo">
  	<![CDATA[
  		select * from tbl_todo where tno = #{tno}
  	]]>
  </select>
  
  <insert id="insert" parameterType="org.kent.entity.Todo">
   	<![CDATA[
     insert into tbl_todo (title) values (#{title}) 
   	]]>
  </insert>
  
  
  </mapper>